<section class="mainImg">
    <div class="container">
        <div class="mainImg__box">
            <img class="mainImg__img" src="{{imgSrc.src}}" alt="">
        </div>
    </div>
</section>
<section class="services">
    <div class="container">
        <h2 class="services__title">{{titleService.title}}</h2>
        <div class="services__box">
            <ul class="services__ul">
                {{#each service}}
                <li class="services__li">{{name}}</li>
                {{/each}}
            </ul>
        </div>
            <p class="services__dscr">{{dscrService.dscr}}</p>
    </div>
</section>

